@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">

        <MudFab StartIcon="@Icons.Material.Filled.Home" Href="/" Color="Color.Secondary" Style="margin-right: 15px" />
        <MudFab StartIcon="@Icons.Material.Filled.Scoreboard" Href="/Results" Color="Color.Secondary" Style="margin-right: 15px" Label="Rezultāti" />
        <MudFab StartIcon="@Icons.Material.Filled.AddCard" Href="/Predictions" Color="Color.Secondary" Style="margin-right: 15px" Label="Pievienot minējumu" />
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}